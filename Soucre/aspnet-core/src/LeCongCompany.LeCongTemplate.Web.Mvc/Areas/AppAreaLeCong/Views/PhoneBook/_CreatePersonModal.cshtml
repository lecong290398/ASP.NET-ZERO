@using Abp.Json
@using LeCongCompany.LeCongTemplate.MultiTenancy
@using LeCongCompany.LeCongTemplate.Web.Areas.AppAreaLeCong.Models.Common.Modals
@using LeCongCompany.LeCongTemplate.Web.Areas.AppAreaLeCong.Models.Tenants

@await Html.PartialAsync("~/Areas/AppAreaLeCong/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewPerson")))

<div class="modal-body">
    <form role="form" novalidate class="form-validation">
        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <input class="form-control" type="text" name="Name" required maxlength="@LeCongCompany.LeCongTemplate.Person.PersonConsts.MaxNameLength">
            <label>@L("Name")</label>
        </div>

        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <input type="text" name="Surname" class="form-control" required maxlength="@LeCongCompany.LeCongTemplate.Person.PersonConsts.MaxSurnameLength">
            <label>@L("Surname")</label>
        </div>

        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <input type="email" name="EmailAddress" class="form-control" maxlength="@LeCongCompany.LeCongTemplate.Person.PersonConsts.MaxEmailAddressLength">
            <label>@L("EmailAddress")</label>
        </div>
    </form>
</div>


@await Html.PartialAsync("~/Areas/AppAreaLeCong/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")