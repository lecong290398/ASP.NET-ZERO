@using LeCongCompany.LeCongTemplate.Web.Areas.AppAreaLeCong.Models.Common.Modals
@using LeCongCompany.LeCongTemplate.Authorization
@model LeCongCompany.LeCongTemplate.Web.Areas.AppAreaLeCong.Models.DynamicEntityProperty.CreateEntityDynamicPropertyViewModel

@await Html.PartialAsync("~/Areas/AppAreaLeCong/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(""))

<div class="modal-body">
    @if (IsGranted(AppPermissions.Pages_Administration_DynamicEntityProperties_Create))
    {
        <button id="CreateNewDynamicEntityProperty" class="btn btn-primary pull-right">
            <i class="fa fa-plus"></i> @L("AddNewDynamicEntityProperty")
        </button>
    }
    <div class="align-items-center">
        <table class="table table-separate table-head-custom dataTable no-footer dtr-inline dt-responsive nowrap ManageDynamicEntityPropertiesTable">
            <thead>
            <tr>
                <th class="w-100">@L("DynamicProperty")</th>
                <th class="w-10px"></th>
            </tr>
            </thead>
        </table>
    </div>
</div>

@await Html.PartialAsync("~/Areas/AppAreaLeCong/Views/Common/Modals/_ModalFooterWithClose.cshtml")
